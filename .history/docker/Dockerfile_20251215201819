# MediaForge Multi-Stage Dockerfile
# Stage 1: Builder - Install dependencies and compile wheels
FROM python:3.11-slim-bullseye AS builder

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libssl-dev \
    libffi-dev \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Build wheels for all dependencies
RUN pip wheel --no-cache-dir --no-deps --wheel-dir /build/wheels -r requirements.txt

# Stage 2: Runtime - Minimal production image
FROM python:3.11-slim-bullseye

WORKDIR /app

# Install only runtime dependencies (minimal footprint)
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    libmagic1 \
    libmediainfo0v5 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create non-root user for security
RUN groupadd -r mediaforge && useradd -r -g mediaforge mediaforge

# Copy wheels from builder
COPY --from=builder /build/wheels /wheels

# Install Python dependencies from wheels (faster, smaller)
RUN pip install --no-cache-dir /wheels/* \
    && rm -rf /wheels

# Copy application code
COPY --chown=mediaforge:mediaforge src/ ./src/
COPY --chown=mediaforge:mediaforge alembic/ ./alembic/
COPY --chown=mediaforge:mediaforge alembic.ini .

# Create necessary directories with proper permissions
RUN mkdir -p /app/data /app/cache /media_library && \
    chown -R mediaforge:mediaforge /app

# Set Python path and environment variables
ENV PYTHONPATH=/app \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Switch to non-root user
USER mediaforge

# Health check
HEALTHCHECK --interval=30s --timeout=10s --retries=3 --start-period=10s \
    CMD python -c "from src.core.config import settings; print('healthy')" || exit 1

# Expose ports
EXPOSE 8000

# Default command (can be overridden)
CMD ["python", "-m", "src.cli.main"]