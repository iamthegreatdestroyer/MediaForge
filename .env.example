# MediaForge Environment Configuration

# Application
MEDIAFORGE_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=sqlite:///data/mediaforge.db

# Media Library
MEDIA_ROOT=/media_library
CACHE_DIR=/app/cache
THUMBNAIL_DIR=/app/cache/thumbnails

# Processing
MAX_WORKERS=4
CHUNK_SIZE=8192
THUMBNAIL_SIZE=300

# Web Interface
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Security
SECRET_KEY=change-this-to-a-random-secret-key
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Torrent (Phase 3)
# TORRENT_ENABLED=false
# TORRENT_PORT=6881
# TORRENT_DOWNLOAD_DIR=/media_library/torrents

# Compression
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=3
COMPRESSION_THREADS=2

# Device Discovery (Phase 3)
# DEVICE_SCAN_ENABLED=false
# DEVICE_SCAN_INTERVAL=300